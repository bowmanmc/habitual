//$background_color = #4E94BF
$background_color_top = #FF9502
$background_color_bottom = #ff5a02
$text_color = #FFFFF3
$navbar_color = rgba(0, 0, 0, 0.85)
$title_shadow = #191000
$habit_background = rgba(0, 0, 0, 0.0)
$link_on_color = #8fc800
$link_on_color_bottom = #419e00
$link_off_color = #BA9D55
$cell_trans_percent = 0.0

/**
 * Styles
 */
html
    height: 100%

body 
    background: $background_color_bottom; /* Old browsers */
    background: -moz-linear-gradient(top, $background_color_top 0%, $background_color_bottom 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$background_color_top), color-stop(100%,$background_color_bottom)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, $background_color_top 0%,$background_color_bottom 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, $background_color_top 0%,$background_color_bottom 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, $background_color_top 0%,$background_color_bottom 100%); /* IE10+ */
    background: linear-gradient(to bottom, $background_color_top 0%,$background_color_bottom 100%); /* W3C */
    background-repeat: no-repeat
    background-attachment: fixed
    color: $text_color
    text-shadow: 1px 1px 0 $title_shadow

h1, h2, h3
    text-shadow: 1px 1px 0 $title_shadow

hr
    background: $background_color_top
    color: $background_color_top
    border: none
    height: 1px

label
    font-size: 120%


li
    list-style: none

.center 
    text-align: center

.content
    margin-top: 57px

.details-btns
    margin: 3.0em 0

.details-completed
    background-size: 100%
    background-repeat: no-repeat
    background-position:center
    opacity: 0.23
    width: 20%

.details-completed-false
    background-image: url(../images/x.png)

.details-completed-true
    background-image: url(../images/check.png)

.habit
    //background-color: $habit_background
    border-bottom: 1px solid $background_color_top

.habit td
    padding-bottom: 0.5em
    padding-left: 10px

.habits
    width: 100%

.daily-status
    text-align: center
    width: 20%

@keyframes highlight {
    0% {
        background-color: rgba(255, 255, 255, 0.8)
    }
    100% {
        background-color: none;
    }
}
.just-toggled
    animation: highlight 1s linear
    -webkit-animation: highlight 1s linear
    -webkit-animation-iteration-count: 1;
    -webkit-animation-fill-mode: forwards;

.link
    //background-color: $link_off_color
    border: 1px solid $link_off_color
    margin-right: 1px
    padding-right: 5px

.link-true
    background: $link_on_color; /* Old browsers */
    background: -moz-linear-gradient(top, $link_on_color 0%, $link_on_color_bottom 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$link_on_color), color-stop(100%,$link_on_color_bottom)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top, $link_on_color 0%,$link_on_color_bottom 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top, $link_on_color 0%,$link_on_color_bottom 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top, $link_on_color 0%,$link_on_color_bottom 100%); /* IE10+ */
    background: linear-gradient(to bottom, $link_on_color 0%,$link_on_color_bottom 100%); /* W3C */
    border: 1px solid $link_on_color

.navbar-inner
    background-color: $navbar_color
    background-image: none
    background-repeat: no-repeat
    filter: none

.navbar .nav.pull-right
    margin-right: 10px

.navbar .brand
    margin-left: -10px

.navigation
    background-color: $navbar_color
    border-bottom: 1px solid #444

.start
    padding: 1.5em

.start h1
    margin: 0.75em 0

.status-toggle
    background-image: url(../images/check.png)
    background-size: 100%
    background-repeat: no-repeat
    background-position:center
    opacity: 0.23
    width: 20%

.underline
    text-decoration: underline
